@model EmployeeCreateViewModel

@{ 
    ViewBag.Title = "Create Employee";
}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Enter a name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" type="email" placeholder="Enter e-mail adress" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-sm-3 col-md-2 col-lg-2 col-xl-2 col-form-label"></label>
            <div class="col-xl-10 col-md-10 col-lg-10 col-sm-9">
                <select asp-for="Department" class="custom-select" asp-items="Html.GetEnumSelectList<Dept>()">
                    <option>Please select a department</option>
                </select>
                <span asp-validation-for="Department"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-3 col-md-2 col-lg-2 col-xl-2 col-form-label"></label>
            <div class="col-sm-9 col-md-10 col-lg-10 col-xl-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" type="file" />
                    <label class="custom-file-label">Choose File</label>
                </div>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group" row>
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">CREATE</button>
            </div>
        </div>
        @section Scripts{ 
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
        }
    </form>